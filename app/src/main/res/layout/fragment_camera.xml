<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Service Status -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_status"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textServiceStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_stopped"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Video Source Selection -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_source"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/radioGroupSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioNone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/none"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radioRealCamera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/real_camera" />

                    <RadioButton
                        android:id="@+id/radioImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/image" />

                    <RadioButton
                        android:id="@+id/radioLocalVideo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/local_video" />

                    <RadioButton
                        android:id="@+id/radioNetworkVideo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/network_video" />

                </RadioGroup>

                <TextView
                    android:id="@+id/textSelectedFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Transform Controls -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutTransformControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transform_controls"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Rotation -->
                <TextView
                    android:id="@+id/textRotation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rotation_value"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/seekBarRotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="360"
                    android:progress="180"
                    android:layout_marginBottom="16dp" />

                <!-- Scale -->
                <TextView
                    android:id="@+id/textScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scale_value"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/seekBarScale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:progress="100"
                    android:layout_marginBottom="16dp" />

                <!-- Brightness -->
                <TextView
                    android:id="@+id/textBrightness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brightness_value"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/seekBarBrightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:layout_marginBottom="16dp" />

                <!-- Flip Controls -->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchFlipHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flip_horizontal"
                    android:layout_marginBottom="8dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchFlipVertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flip_vertical"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/buttonResetTransform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_transform"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonStartCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/start_camera" />

            <Button
                android:id="@+id/buttonStopCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/stop_camera"
                android:enabled="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
